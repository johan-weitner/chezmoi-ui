{{ if eq .chezmoi.os "darwin" -}}
#!/bin/bash

brew bundle --no-lock --file=/dev/stdin <<EOF
{{ range .packages.darwin.brews -}}
brew {{ . | quote }}
{{ end -}}
{{ range .packages.darwin.casks -}}
cask {{ . | quote }}
{{ end -}}
EOF
{{ end -}}

{{ range .packages.darwin.binary-mac -}}
# fetch quote via curl and save under a temporary file name
# then run the binary
curl -sL {{ . | quote }} -o /tmp/{{ .filename }}
chmod +x /tmp/{{ .filename }}
/tmp/{{ .filename }}
{{ end -}}