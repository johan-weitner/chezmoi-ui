import {
  Badge,
  Group,
  Title,
  Text,
  Card,
  SimpleGrid,
  Container,
  rem,
  useMantineTheme,
} from '@mantine/core';
import { IconGauge, IconUser, IconCookie, IconBrandRust } from '@tabler/icons-react';
import classes from './FeatureCards.module.css';
import { SUBCAT, ICON } from '../constants/strings';

const FeaturesCards = (props) => {
  const { data, os } = props;
  const theme = useMantineTheme();

  const root = data[os];
  console.log('data[os]: ', root);
  const keys = Object.keys(root).filter(item => { return item !== 'pre' });


  const subCats = root && keys.map(sub => {
    return {
      title: SUBCAT[sub],
      listItems: root[sub] || [],
      icon: ICON[sub],
    };
  });

  console.log('subCats: ', subCats);
  console.log('subCategories: ', subCategories);

  const features = subCats.map((subCategory) => (
    <Card key={subCategory.title} shadow="md" radius="md" className={classes.card} padding="xl">
      <subCategory.icon
        style={{ width: rem(50), height: rem(50) }}
        stroke={2}
        color={theme.colors.blue[6]}
      />
      <Text fz="lg" fw={500} className={classes.cardTitle} mt="md" style={{ textAlign:"left" }}>
        {subCategory.title}
      </Text>
      <Text fz="sm" c="dimmed" mt="sm" style={{ textAlign:"left" }}>
        { subCategory?.listItems?.length > 0 && subCategory.listItems.map(item => {
          return (
            <div key={typeof item === 'string' ? item : item.name} className={classes.itemBox}>
              {typeof item === 'string' ? item : item.name}
            </div>
          );
        }) }
      </Text>
    </Card>
  ));

  return (
    <Container size="lg" py="xl" style={{ backgroundColor: "#333" }}>
      <Group justify="center">
        <Badge variant="filled" size="lg">
          PACKAGES
        </Badge>
      </Group>

      <Title order={2} className={classes.title} ta="center" mt="sm">
        <span style={{ textTransform:"capitalize" }}>{ os }</span>
      </Title>

      <SimpleGrid cols={{ base: 1, md: 3 }} spacing="xl" mt={50}>
        {features}
      </SimpleGrid>
    </Container>
  );
}

export default FeaturesCards;
